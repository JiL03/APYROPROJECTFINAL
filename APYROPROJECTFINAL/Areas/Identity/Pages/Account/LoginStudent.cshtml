@page
@model LoginStudentModel

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Areas/Identity/Pages/_AuthLayout.cshtml";
}

<style>
    .overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: #12161d;
        z-index: 9999; /* Ensure the overlay is on top of everything */
    }



    @@media screen and (max-width: 768px) {
        .img-div {
            display: none;
        }


        .img-div img {
            display: none;
        }

        .body-con {
            width: 100%;
            
        }

        .main {
            height: 80vh;
        }

        .custom-card {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-top: 5%;
        }

        .cont {
            width: 100%;
            text-align: center;
        }

        .cont .custom-text {
            text-align: center;
        }
    }
</style>



<div class="overlay"></div>

<div class="col d-flex ms-4 mt-5">
    <div>
        <a href="/MainPage/MainHomePage"><img src="~/samplelogo.png" height="70px" width="75.5px" /></a>
    </div>
    <div class="ms-2 mt-2">
        <p>
            <b style="font-size: 20px; color: white">APyro</b><br /> <b style="font-size: 16px;font-weight:700; color: #797979">Attendance Pyro</b>
        </p>
    </div>
</div>

<div class="main col-md-12 d-flex flex-column align-items-center">
    <div class="body-con col-md-9 d-flex justify-content-center align-items-center">
        <div class="custom-card mt-5 p-5 d-flex col-md-9" style="background-color: #1A222B; color: white;border-radius: 15px">
            <div class="img-div col-md-6 d-flex justify-content-center" style="margin-left:-5%">
                <img src="~/userlogin.png" width="100%" />
            </div>
            <div class="cont col-md-6">
                <div class="custom-text">
                    <h3><b>Log in your account</b></h3>
                    <p>Welcome Back</p>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <form id="account" method="post">
                    <div class="form-floating mb-2" style="width: 100%">
                        <input asp-for="Input.Email" style="background-color: #212529 ;color : white" class="form-control" autocomplete="username" aria-required="true" value="admin@gmail.com" />
                        <label asp-for="Input.Email" class="form-label"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-2" style="width: 100% ; background-color:#212529">
                        <input asp-for="Input.Password" style="background-color: #212529 ;color : white" class="form-control" autocomplete="current-password" aria-required="true" value="Admin@123"/>
                        <label asp-for="Input.Password" style="color:white" class="form-label"></label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col d-flex form-check ms-3 justify-content-between" >
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                        <div class="d-flex flex-column align-items-center">
                            <button class="btn" style="width: 100%; background-color: #0844F4; color: white">
                                <b>Log In</b>
                            </button>
                            <div class="col d-flex">
                                <p class="custom-text p-1 mt-1">Don't have an account?</p>
                                <a href="/MainPage/EducatorStudentSignUp" class="btn btn-link">Sign Up</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<script>

    document.addEventListener("DOMContentLoaded", function () {
        var loginButton = document.querySelector(".btn");
        loginButton.click();
    });

</script>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
