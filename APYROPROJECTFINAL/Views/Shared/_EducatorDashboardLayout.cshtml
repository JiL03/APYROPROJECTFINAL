        /* CSS for mobile screens */
        @@media only screen and (max-width: 767px) {
            .sidebar {
                display: none; /* hide sidebar */
            }


            .login-partial {
                display: none; /* hide login partial */
            }

            .navbar {
                position: relative;
                background-color: white;
            }

            .burger {
                display: block;
                position: absolute;
                left: 8px;
            }

            .m-nav {
                position: absolute;
                top: 50px;
                left: -10px;
                width: 95%;
                font-size: 18px;
                list-style-type: none;
            }

                .m-nav a, .logout {
                    color: white;
                    text-decoration: none;
                    margin: 0px;
                    display: block;
                    width: 100%;
                    height: 100%;
                }

            .logout {
                color: white;
                text-decoration: none;
                margin: 0px;
                display: block;
                font-size: 18px;
                padding: 0px;
            }

            .m-nav li {
                padding: 5px;
                background-color: #1A222B;
                width: 100%;
            }

                .m-nav li:hover {
                    background-color: white;
                }

                    .m-nav li:hover a, .m-nav li:hover .logout {
                        color: black;
                    }
        }

        @@media screen and (min-width: 728px) {
            .m-nav {
                display: none !important;
            }
        }
    </style>

