@{
    Layout = "/Views/Shared/_MainHomePageLayout.cshtml";
}




<style>
    body {
        margin: 0;
        background-color: #242423;
        font-family: "Inter";
    }

    .flex-container
    {
        margin-left:-2%;
        height: 820px;
        width: 1720px;
        background: repeating-linear-gradient(168deg, #12161D 0px, #12161D 750px, #1A222B 280px, hsl(210,14%, 16%));
        border-left: white;
    }

    .container {
        margin-left: 0%;
    }

    a {
        margin-left: 40px;
        text-decoration: none;
        color: white;
        font-size: 24px;
    }
</style>


<div class="container">
    <section id="main">
        <div class="flex-container" style="color: white">
            <div class="col-md-12 d-flex" style="height: 250px; width: 100%;">
                <div class="d-flex justify-content-center align-items-center" style="width:30%;">
                    <img src="~/samplelogo 1.png" style="margin-left: 10%"  />
                </div>

                <div class="col d-flex justify-content-center align-items-center" style="width:40%">
                    <a href="@Url.Action("Policies", "MainPage")">
                        Policies
                    </a>
                    <a href="@Url.Action("ContactUs", "MainPage")">
                        Contact Us
                    </a>
                    <a href="@Url.Action("Documentation", "MainPage")">
                        Documentation
                    </a>
                    <a href="@Url.Action("AboutUs", "MainPage")">
                        About Us
                    </a>
                </div>

                <div class="d-flex justify-content-center align-items-center" style="width:30%; ">
                    <i class="fa-solid fa-circle-question fa-xl"></i>
                </div>

            </div>
            <div class="col-md-12 d-flex" style="width: 100%">
                <div class="col-md-6 d-flex flex-column align-items-center">
                    <div class="row flex-column align-items-center"
                         style=" width: 50%;">
                        <div class="text text-center" style="margin-left: 15%">
                            <h1 style="font-size: 60px"><b>Welcome to </b> <br /><b style="color: #39A7FF">APyro</b></h1>
                        </div>
                        <div style="margin-left: 15%; margin-top: 5%">
                            <p class="d-flex flex-column align-items-center"
                               style="font-size: 24px">
                                "Empowering HyFlex Learning: <br />
                                Modern Attendance Management
                                <br /> for  Hybrid Education."
                            </p>
                        </div>
                        <div class="col d-flex justify-content-between" style="margin-top: 7%">
                            <a href="/Identity/Account/Login" class="btn" style="background-color:#0844F4; color: white; width: 45%;
                                      border-radius: 10px">
                                Log in
                            </a>
                            <a href="@Url.Action("EducatorStudentSignUp", "MainPage")" class="btn btn-outline-primary" style="color: white; width: 45%;
                                       border-radius: 10px">
                                Sign up
                            </a>
                        </div>
                    </div>

                </div>
                <div id="img-div" class="col-md-6 d-flex flex-column align-items-center"
                     style="margin-top: -6%">
                    <img src="~/photoroom.png" id="image" alt="" width="70%" style="margin-right: 15%" />
                </div>
            </div>


        </div>
    </section>
</div>













