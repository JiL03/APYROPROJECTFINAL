                    <button type="submit" value="Create" class="btn btn-success mb-3" style="font-size:18px; width:95%"><b>+ Create Class</b></button>

                </form>


            </div>

            <div class="right col-md-6 row" style="position:relative">
                <img class="img-fluid w-100  mx-auto" style="height:100%   ; position:relative; left:30px" src="/images/join2.png">
            </div>



        </div>

    </div>
</div>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}







<script type="text/javascript">
    $(window).on('load', function () {
        $('#myModal').modal('show');
    });


    function hide() {
        $('#myModal').modal('hide');
    }

</script>

@* The modal *@



<div class="modal " id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content" style="background-color:#1A222B">

            <div class="modal-body">
                <img style="width: 100%; height:100%" src="/images/createclassmodal.png" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="hide()">Close</button>

            </div>
        </div>
    </div>
</div>







